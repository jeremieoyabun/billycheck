generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Scan {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  status         String
  engagement     String?
  fileKey        String?
  originalName   String?
  mimeType       String?
  size           Int?
  resultJson     Json?
  userIdentifier String?
  email          String?

  @@index([userIdentifier])
  @@index([email])
}

model UserQuota {
  id             String   @id @default(cuid())
  userIdentifier String   @unique
  freeScansUsed  Int      @default(0)
  paidCredits    Int      @default(0)
  referralCode   String?  @unique
  referredBy     String?
  email          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userIdentifier])
  @@index([referralCode])
}

model ReferralClaim {
  id           String   @id @default(cuid())
  referralCode String
  referrerId   String
  referredId   String   @unique
  createdAt    DateTime @default(now())

  @@index([referralCode])
}

model StripePayment {
  id             String   @id @default(cuid())
  sessionId      String   @unique
  userIdentifier String
  amountCents    Int
  status         String   @default("pending")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userIdentifier])
  @@index([sessionId])
}
